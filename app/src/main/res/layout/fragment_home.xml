<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/linlayoutTopBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textView_fragmentHome_headline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textColor="@color/app_dark_blue"
            android:textSize="16sp"
            tools:text="Your Balance"
            />

        <TextView
            android:id="@+id/textView_fragmentHome_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/app_dark_blue"
            android:textSize="24sp"
            tools:text="0.00213123 BTC (12323 USD)"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linlayoutTopBalance"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>